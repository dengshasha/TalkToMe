<!doctype html>
<html lang="en">
<head>
    <%- include('templates/header-title') %>
    <link rel="stylesheet" href="/stylesheets/userinfoModify.css">
</head>
<body>
<%- include('templates/header-simple') %>

<div class="modify-info">
    <form action="" method="post" class="modify-form" role="form">
        <div class="modify-form-title">
            <p>修改个人信息</p>
        </div>
        <div class="form-box">
            <div class="avator">
                <label for="headportrait" class="label-portrait">头像：</label>
                <div class="headportrait">
                    <img id = "headportrait" name="avator_img" src="<%=user.avator%>" alt="" width="150px" height="150px">
                </div>
                <div class="file-field input-field file-choose">
                    <div class="btn">
                        <span>上传头像</span>
                        <input type="file" id="fileUpload" name="avator1"/>
                    </div>
                    <input type="text" class="file-path validate"/>
                </div>
                <div class="upload">
                    <input type="text" id = "imageUrl" class="hide" name="avator">
                    <a href="#" class="waves-effect waves-light btn" id="upload">保存</a>
                </div>
            </div>


            <div class="form-group">
                <label for="nickname" class="col-sm-2 control-label">昵称：</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="nickname" value="<%= user.username %>" id="nickname">
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-sm-2 control-label">性别：</label>
                <div class="col-sm-10">
                    <label for="male">男
                        <input type="radio" name="gender" value="male" checked id="male">
                    </label>
                    <label for="female">女
                        <input type="radio" name="gender" value="female" id="female">
                    </label>
                </div>
            </div>
           
            <div class="submit">
                <button type="button" id="submit">保存设置</button>
            </div>
        </div><!--end form-box-->
    </form>
</div><!--end modify-info-->
<!--提示-->
<div class="modal fade" id="prompt" tabindex="-1" role="dialog" aria-labelledby="prompt-label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="prompt-title">提示</h4>
            </div>
            <div class="row modal-body" style="text-align: center;">
                <p id="prompt-body"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">确定</button>
            </div>
        </div>
    </div>
</div>

<%- include('templates/footer') %>
</body>
<script src="/javascripts/userinfoModify.js"></script>
</html>
