<% for(var i = 0 ; i < post.length ; i ++) { %>
<div class="head">
    <div class="title">
        <h3>
            <a href="#">
                <%= post[i].title %>
            </a>
        </h3>
    </div>
    <div class="time">
        <p>
                <span>
                    <%= post[i].time %>
                </span>
            <% if(allowAction) { %>
            <a href="/post/edit/?id=<%=post[i]._id%>">编辑</a>&nbsp;|&nbsp;
            <a href="#" data-target="#remove" data-toggle="modal">删除</a>
            <% } %>
        </p>
        <input type="text" value="<%=post[i]._id%>" hidden id="postId">
    </div>
    <div class="classification">
        <p>分类：<a href="">
                <%= post[i].categoryName %>
            </a>
        </p>
    </div>
</div><!--end head-->



<div id="content">
    <% if(post[i].mkContent) { %>
    <div class="content" id="mk-content">
        <textarea name="" id="editormd-mk-content" style="display: none;"><%= post[i].mkContent %></textarea>
    </div>
    <% } else { %>
    <div class="content">
        <%- post[i].content %>
    </div>
    <% } %>
</div>

<% } %>
